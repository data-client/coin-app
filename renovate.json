{
  "extends": ["group:allNonMajor", "group:monorepos"],
  "assigneesFromCodeOwners": true,
  "commitMessagePrefix": "pkg: ",
  "commitMessageTopic": "`{{depName}}`",
  "dependencyDashboardApproval": true,
  "rangeStrategy": "auto",
  "ignoreDeps": [
    "whatwg-fetch",
    "react-error-overlay",
    "downlevel-dts",
    "immutable",
    "@types/lodash",
    "nock",
    "@linaria/babel-preset",
    "@linaria/core",
    "@linaria/react",
    "@linaria/shaker",
    "@linaria/tags",
    "@linaria/utils",
    "@linaria/webpack5-loader"
  ],
  "timezone": "America/Chicago",
  "postUpdateOptions": ["yarnDedupeHighest"],
  "packageRules": [
    {
      "matchSourceUrls": ["https://github.com/ntucker/anansi"],
      "groupName": "anansi",
      "matchUpdateTypes": ["minor", "patch"]
    },
    {
      "matchPackageNames": ["@babel/runtime", "core-js", "core-js-compat"],
      "matchDepTypes": ["dependencies"],
      "rangeStrategy": "replace"
    },
    {
      "extends": ["monorepo:nextjs"],
      "matchUpdateTypes": ["minor", "patch"],
      "groupName": "all non-major dependencies",
      "groupSlug": "all-minor-patch"
    },
    {
      "matchPackageNames": ["@octokit/rest"],
      "matchUpdateTypes": ["minor", "patch"],
      "groupName": "all non-major dependencies",
      "groupSlug": "all-minor-patch"
    },
    {
      "extends": ["monorepo:react"],
      "matchUpdateTypes": ["major", "minor", "patch"],
      "groupName": "react"
    },
    {
      "matchSourceUrlPrefixes": [
        "https://github.com/webpack",
        "https://github.com/callstack/linaria"
      ],
      "matchUpdateTypes": ["major", "minor", "patch"],
      "groupSlug": "build",
      "groupName": "build packages"
    },
    {
      "matchPackageNames": ["@anansi/webpack-config"],
      "matchUpdateTypes": ["major", "minor", "patch"],
      "groupSlug": "build",
      "groupName": "build packages"
    },
    {
      "extends": ["monorepo:babel"],
      "matchUpdateTypes": ["major", "minor", "patch"],
      "groupSlug": "build",
      "groupName": "build packages"
    },
    {
      "matchUpdateTypes": ["major", "minor", "patch"],
      "matchPackageNames": [
        "@anansi/babel-preset",
        "core-js",
        "core-js-compat"
      ],
      "groupSlug": "build",
      "groupName": "build packages"
    },
    {
      "extends": ["packages:jsTest"],
      "matchUpdateTypes": ["major", "minor", "patch"],
      "groupSlug": "validation",
      "groupName": "validation packages"
    },
    {
      "matchPackageNames": [
        "@anansi/jest-preset",
        "@types/jsdom",
        "jest-environment-jsdom"
      ],
      "matchUpdateTypes": ["major", "minor", "patch"],
      "groupSlug": "validation",
      "groupName": "validation packages"
    },
    {
      "extends": ["packages:linters"],
      "matchUpdateTypes": ["major", "minor", "patch"],
      "groupSlug": "validation",
      "groupName": "validation packages"
    },
    {
      "groupSlug": "validation",
      "groupName": "validation packages",
      "matchUpdateTypes": ["major", "minor", "patch"],
      "matchPackageNames": [
        "@anansi/eslint-plugin",
        "prettier",
        "eslint-plugin-prettier",
        "@typescript-eslint/eslint-plugin"
      ]
    },
    {
      "extends": ["monorepo:commitlint"],
      "matchUpdateTypes": ["major", "minor", "patch"],
      "groupSlug": "validation",
      "groupName": "validation packages"
    }
  ]
}
